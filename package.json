{
  "name": "primeimage",
  "version": "0.6.0",
  "description": "Turn any image into an prime number.",
  "main": "main.js",
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push --tags && git push",
    "lint:js": "xo",
    "lint:elm": "elm-format elm-src --validate",
    "lint:scss": "stylelint site/**/*.scss",
    "lint": "npm run lint:js && npm run lint:elm && npm run lint:scss",
    "test:elm": "elm-test 'tests/**/*.elm'",
    "test:js": "karma start --single-run --browsers FirefoxHeadless",
    "test": "npm run test:elm && npm run test:js",
    "build": "elm make elm-src/Main.elm --output site/built/elm.js && node util/elm2esm site/built/elm.js",
    "serve": "bundle exec jekyll serve --source site"
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "chai": "4.2.0",
    "elm": "0.19.0-no-deps",
    "elm-format": "0.8.1",
    "elm-test": "0.19.0-rev6",
    "karma": "4.1.0",
    "karma-chai": "0.1.0",
    "karma-firefox-launcher": "1.1.0",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-webpack": "3.0.5",
    "mocha": "6.1.4",
    "stylelint": "10.0.1",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "18.3.0",
    "stylelint-scss": "3.6.1",
    "webpack": "4.32.2",
    "xo": "0.24.0"
  },
  "xo": {
    "space": true,
    "env": [
      "mocha",
      "browser"
    ],
    "import/extensions": "ignorePackages",
    "rules": {
      "eslint-comments/no-unused-disable": "warn"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-rational-order"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "function",
            "if",
            "each",
            "include",
            "mixin"
          ]
        }
      ]
    }
  }
}
